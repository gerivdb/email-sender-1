{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Cognitive Architecture Transversal Dimensions",
  "description": "Definition of the transversal dimensions in the cognitive architecture",
  "type": "object",
  "properties": {
    "dimensions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "key", "description", "aspects", "visualization"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the dimension"
          },
          "key": {
            "type": "string",
            "description": "Key identifier for the dimension"
          },
          "description": {
            "type": "string",
            "description": "Detailed description of the dimension"
          },
          "aspects": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name", "key", "description", "values"],
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Name of the aspect"
                },
                "key": {
                  "type": "string",
                  "description": "Key identifier for the aspect"
                },
                "description": {
                  "type": "string",
                  "description": "Detailed description of the aspect"
                },
                "values": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": ["name", "key", "description"],
                    "properties": {
                      "name": {
                        "type": "string",
                        "description": "Name of the value"
                      },
                      "key": {
                        "type": "string",
                        "description": "Key identifier for the value"
                      },
                      "description": {
                        "type": "string",
                        "description": "Detailed description of the value"
                      },
                      "numeric_value": {
                        "type": "number",
                        "description": "Numeric representation of the value (if applicable)"
                      },
                      "icon": {
                        "type": "string",
                        "description": "Icon representing the value"
                      }
                    }
                  }
                },
                "visualization": {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "description": "Type of visualization for this aspect"
                    },
                    "color_scheme": {
                      "type": "string",
                      "description": "Color scheme used for this aspect"
                    },
                    "icon": {
                      "type": "string",
                      "description": "Icon or symbol representing this aspect"
                    }
                  }
                }
              }
            }
          },
          "visualization": {
            "type": "object",
            "properties": {
              "primary_metaphor": {
                "type": "string",
                "description": "Primary visual metaphor for this dimension"
              },
              "representation": {
                "type": "string",
                "description": "How this dimension is represented visually"
              },
              "color_scheme": {
                "type": "string",
                "description": "Color scheme used for this dimension"
              },
              "icon": {
                "type": "string",
                "description": "Icon or symbol representing this dimension"
              }
            }
          },
          "markdown_representation": {
            "type": "object",
            "properties": {
              "format": {
                "type": "string",
                "description": "Format string for Markdown representation"
              },
              "example": {
                "type": "string",
                "description": "Example of Markdown representation"
              }
            }
          }
        }
      }
    }
  }
}
