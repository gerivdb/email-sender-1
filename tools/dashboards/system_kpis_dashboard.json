{
  "title": "Tableau de bord des KPIs système",
  "description": "Vue d'ensemble des indicateurs clés de performance système",
  "refresh": "1m",
  "time": {
    "from": "now-24h",
    "to": "now"
  },
  "panels": [
    {
      "id": "system_overview",
      "title": "Vue d'ensemble du système",
      "type": "stat-panel",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 24,
        "h": 3
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto"
      },
      "targets": [
        {
          "kpi": "SYSTEM_LOAD",
          "label": "Charge système"
        }
      ]
    },
    {
      "id": "cpu_panel",
      "title": "Utilisation CPU",
      "type": "gauge",
      "gridPos": {
        "x": 0,
        "y": 3,
        "w": 8,
        "h": 8
      },
      "options": {
        "min": 0,
        "max": 100,
        "thresholds": [
          { "value": 0, "color": "green" },
          { "value": 70, "color": "orange" },
          { "value": 90, "color": "red" }
        ]
      },
      "targets": [
        {
          "kpi": "CPU_UTILIZATION",
          "label": "Utilisation CPU (%)"
        }
      ]
    },
    {
      "id": "memory_panel",
      "title": "Utilisation mémoire",
      "type": "gauge",
      "gridPos": {
        "x": 8,
        "y": 3,
        "w": 8,
        "h": 8
      },
      "options": {
        "min": 0,
        "max": 100,
        "thresholds": [
          { "value": 0, "color": "green" },
          { "value": 80, "color": "orange" },
          { "value": 95, "color": "red" }
        ]
      },
      "targets": [
        {
          "kpi": "MEMORY_UTILIZATION",
          "label": "Utilisation mémoire (%)"
        }
      ]
    },
    {
      "id": "disk_panel",
      "title": "Utilisation disque",
      "type": "gauge",
      "gridPos": {
        "x": 16,
        "y": 3,
        "w": 8,
        "h": 8
      },
      "options": {
        "min": 0,
        "max": 100,
        "thresholds": [
          { "value": 0, "color": "green" },
          { "value": 85, "color": "orange" },
          { "value": 95, "color": "red" }
        ]
      },
      "targets": [
        {
          "kpi": "DISK_UTILIZATION",
          "label": "Utilisation disque (%)"
        }
      ]
    },
    {
      "id": "cpu_trend",
      "title": "Tendance d'utilisation CPU",
      "type": "graph",
      "gridPos": {
        "x": 0,
        "y": 11,
        "w": 12,
        "h": 8
      },
      "options": {
        "legend": {
          "show": true,
          "values": true,
          "min": true,
          "max": true,
          "avg": true
        }
      },
      "targets": [
        {
          "kpi": "CPU_UTILIZATION",
          "label": "Utilisation moyenne"
        },
        {
          "kpi": "CPU_PEAK",
          "label": "Pic d'utilisation"
        }
      ]
    },
    {
      "id": "memory_trend",
      "title": "Tendance d'utilisation mémoire",
      "type": "graph",
      "gridPos": {
        "x": 12,
        "y": 11,
        "w": 12,
        "h": 8
      },
      "options": {
        "legend": {
          "show": true,
          "values": true,
          "min": true,
          "max": true,
          "avg": true
        }
      },
      "targets": [
        {
          "kpi": "MEMORY_UTILIZATION",
          "label": "Utilisation mémoire"
        },
        {
          "kpi": "MEMORY_AVAILABLE",
          "label": "Mémoire disponible",
          "unit": "MB",
          "yaxis": 2
        }
      ]
    },
    {
      "id": "disk_io_panel",
      "title": "Activité disque",
      "type": "graph",
      "gridPos": {
        "x": 0,
        "y": 19,
        "w": 12,
        "h": 8
      },
      "options": {
        "legend": {
          "show": true,
          "values": true,
          "min": true,
          "max": true,
          "avg": true
        }
      },
      "targets": [
        {
          "kpi": "DISK_READ_RATE",
          "label": "Lectures/sec"
        },
        {
          "kpi": "DISK_WRITE_RATE",
          "label": "Écritures/sec"
        },
        {
          "kpi": "DISK_QUEUE_LENGTH",
          "label": "File d'attente",
          "yaxis": 2
        }
      ]
    },
    {
      "id": "network_panel",
      "title": "Activité réseau",
      "type": "graph",
      "gridPos": {
        "x": 12,
        "y": 19,
        "w": 12,
        "h": 8
      },
      "options": {
        "legend": {
          "show": true,
          "values": true,
          "min": true,
          "max": true,
          "avg": true
        }
      },
      "targets": [
        {
          "kpi": "NETWORK_THROUGHPUT_IN",
          "label": "Débit entrant"
        },
        {
          "kpi": "NETWORK_THROUGHPUT_OUT",
          "label": "Débit sortant"
        },
        {
          "kpi": "NETWORK_ERRORS",
          "label": "Erreurs",
          "yaxis": 2
        }
      ]
    },
    {
      "id": "composite_kpis",
      "title": "KPIs composites",
      "type": "graph",
      "gridPos": {
        "x": 0,
        "y": 27,
        "w": 24,
        "h": 8
      },
      "options": {
        "legend": {
          "show": true,
          "values": true,
          "min": true,
          "max": true,
          "avg": true
        }
      },
      "targets": [
        {
          "kpi": "SYSTEM_LOAD",
          "label": "Charge système"
        },
        {
          "kpi": "IO_PERFORMANCE",
          "label": "Performance E/S"
        },
        {
          "kpi": "NETWORK_PERFORMANCE",
          "label": "Performance réseau"
        }
      ]
    },
    {
      "id": "system_resources",
      "title": "Ressources système",
      "type": "table",
      "gridPos": {
        "x": 0,
        "y": 35,
        "w": 24,
        "h": 8
      },
      "options": {
        "showHeader": true
      },
      "targets": [
        {
          "kpi": "PROCESS_COUNT",
          "label": "Processus"
        },
        {
          "kpi": "THREAD_COUNT",
          "label": "Threads"
        },
        {
          "kpi": "HANDLE_COUNT",
          "label": "Handles"
        },
        {
          "kpi": "SYSTEM_UPTIME",
          "label": "Uptime (heures)"
        }
      ]
    }
  ]
}
