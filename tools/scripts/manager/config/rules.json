        }
      ]
    },
    {
      "name": "Batch Scripts Organization",
      "description": "RÃ¨gles pour organiser les scripts batch",
      "patterns": [
        {
          "pattern": ".*\\.(cmd|bat)$",
          "type": "regex"
        }
      ],
      "conditions": [
        {
          "field": "content",
          "pattern": "mcp|model|context|protocol",
          "type": "regex",
          "destination": "scripts/cmd/mcp"
        },
        {
          "field": "content",
          "pattern": "augment",
          "type": "regex",
