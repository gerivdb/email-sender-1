{
  "rules": [
    {
      "name": "PowerShell Scripts Organization",
      "description": "RÃ¨gles pour organiser les scripts PowerShell",
      "patterns": [
        {
          "pattern": ".*\\.ps1$",
          "type": "regex"
        }
      ],
      "conditions": [
        {
          "field": "content",
          "pattern": "maintenance|cleanup|fix|repair|update",
          "type": "regex",
          "destination": "scripts/maintenance"
        },
        {
          "field": "content",
          "pattern": "setup|install|configure|config",
          "type": "regex",
          "destination": "scripts/setup"
        },
        {
          "field": "content",
          "pattern": "workflow|process|flow",
          "type": "regex",
          "destination": "scripts/workflow"
        },
        {
          "field": "content",
          "pattern": "util|utility|helper|tool",
          "type": "regex",
          "destination": "scripts/utils"
        },
        {
          "field": "content",
          "pattern": "api|rest|http|endpoint",
          "type": "regex",
          "destination": "scripts/api"
        },
        {
          "field": "content",
          "pattern": "doc|documentation|readme|guide",
          "type": "regex",
          "destination": "scripts/documentation"
        },
        {
          "field": "content",
          "pattern": "roadmap|plan|task",
          "type": "regex",
          "destination": "scripts/roadmap"
        },
        {
          "field": "content",
          "pattern": "journal|log|entry|rag",
          "type": "regex",
          "destination": "scripts/journal"
        }
      ]
    },
    {
      "name": "Python Scripts Organization",
