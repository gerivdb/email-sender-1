{
  "templates": [
    {
      "id": "system_dashboard",
      "name": "Tableau de bord système",
      "description": "Tableau de bord pour surveiller les métriques système",
      "layout": {
        "rows": 3,
        "columns": 4,
        "panels": [
          {
            "id": "cpu_usage",
            "title": "Utilisation CPU",
            "type": "gauge",
            "position": {
              "row": 0,
              "col": 0,
              "width": 1,
              "height": 1
            },
            "data_source": "system_metrics",
            "metric": "CPU",
            "options": {
              "min": 0,
              "max": 100,
              "unit": "%",
              "thresholds": [
                {
                  "value": 0,
                  "color": "#73BF69"
                },
                {
                  "value": 70,
                  "color": "#FADE2A"
                },
                {
                  "value": 90,
                  "color": "#F2495C"
                }
              ]
            }
          },
          {
            "id": "memory_usage",
            "title": "Utilisation mémoire",
            "type": "gauge",
            "position": {
              "row": 0,
              "col": 1,
              "width": 1,
              "height": 1
            },
            "data_source": "system_metrics",
            "metric": "Memory",
            "options": {
              "min": 0,
              "max": 100,
              "unit": "%",
              "thresholds": [
                {
                  "value": 0,
                  "color": "#73BF69"
                },
                {
                  "value": 70,
                  "color": "#FADE2A"
                },
                {
                  "value": 90,
                  "color": "#F2495C"
                }
              ]
            }
          },
          {
            "id": "disk_usage",
            "title": "Utilisation disque",
            "type": "gauge",
            "position": {
              "row": 0,
              "col": 2,
              "width": 1,
              "height": 1
            },
            "data_source": "system_metrics",
            "metric": "Disk",
            "options": {
              "min": 0,
              "max": 100,
              "unit": "%",
              "thresholds": [
                {
                  "value": 0,
                  "color": "#73BF69"
                },
                {
                  "value": 70,
                  "color": "#FADE2A"
                },
                {
                  "value": 90,
                  "color": "#F2495C"
                }
              ]
            }
          },
          {
            "id": "network_usage",
            "title": "Utilisation réseau",
            "type": "gauge",
            "position": {
              "row": 0,
              "col": 3,
              "width": 1,
              "height": 1
            },
            "data_source": "system_metrics",
            "metric": "Network",
            "options": {
              "min": 0,
              "max": 100,
              "unit": "%",
              "thresholds": [
                {
                  "value": 0,
                  "color": "#73BF69"
                },
                {
                  "value": 70,
                  "color": "#FADE2A"
                },
                {
                  "value": 90,
                  "color": "#F2495C"
                }
              ]
            }
          },
          {
            "id": "cpu_trend",
            "title": "Tendance CPU",
            "type": "line",
            "position": {
              "row": 1,
              "col": 0,
              "width": 2,
              "height": 1
            },
            "data_source": "system_metrics",
            "metric": "CPU",
            "options": {
              "time_range": "last_24h",
              "interval": "5m",
              "legend": true,
              "tooltip": true
            }
          },
          {
            "id": "memory_trend",
            "title": "Tendance mémoire",
            "type": "line",
            "position": {
              "row": 1,
              "col": 2,
              "width": 2,
              "height": 1
            },
            "data_source": "system_metrics",
            "metric": "Memory",
            "options": {
              "time_range": "last_24h",
              "interval": "5m",
              "legend": true,
              "tooltip": true
            }
          },
          {
            "id": "disk_trend",
            "title": "Tendance disque",
            "type": "line",
            "position": {
              "row": 2,
              "col": 0,
              "width": 2,
              "height": 1
            },
            "data_source": "system_metrics",
            "metric": "Disk",
            "options": {
              "time_range": "last_24h",
              "interval": "5m",
              "legend": true,
              "tooltip": true
            }
          },
          {
            "id": "network_trend",
            "title": "Tendance réseau",
            "type": "line",
            "position": {
              "row": 2,
              "col": 2,
              "width": 2,
              "height": 1
            },
            "data_source": "system_metrics",
            "metric": "Network",
            "options": {
              "time_range": "last_24h",
              "interval": "5m",
              "legend": true,
              "tooltip": true
            }
          }
        ]
      }
    },
    {
      "id": "application_dashboard",
      "name": "Tableau de bord application",
      "description": "Tableau de bord pour surveiller les métriques applicatives",
      "layout": {
        "rows": 3,
        "columns": 4,
        "panels": [
          {
            "id": "response_time",
            "title": "Temps de réponse",
            "type": "gauge",
            "position": {
              "row": 0,
              "col": 0,
              "width": 1,
              "height": 1
            },
            "data_source": "application_metrics",
            "metric": "ResponseTime",
            "options": {
              "min": 0,
              "max": 5000,
              "unit": "ms",
              "thresholds": [
                {
                  "value": 0,
                  "color": "#73BF69"
                },
                {
                  "value": 1000,
                  "color": "#FADE2A"
                },
                {
                  "value": 3000,
                  "color": "#F2495C"
                }
              ]
            }
          },
          {
            "id": "error_rate",
            "title": "Taux d'erreur",
            "type": "gauge",
            "position": {
              "row": 0,
              "col": 1,
              "width": 1,
              "height": 1
            },
            "data_source": "application_metrics",
            "metric": "ErrorRate",
            "options": {
              "min": 0,
              "max": 100,
              "unit": "%",
              "thresholds": [
                {
                  "value": 0,
                  "color": "#73BF69"
                },
                {
                  "value": 5,
                  "color": "#FADE2A"
                },
                {
                  "value": 10,
                  "color": "#F2495C"
                }
              ]
            }
          },
          {
            "id": "throughput",
            "title": "Débit",
            "type": "gauge",
            "position": {
              "row": 0,
              "col": 2,
              "width": 1,
              "height": 1
            },
            "data_source": "application_metrics",
            "metric": "Throughput",
            "options": {
              "min": 0,
              "max": 1000,
              "unit": "req/s",
              "thresholds": [
                {
                  "value": 0,
                  "color": "#73BF69"
                },
                {
                  "value": 800,
                  "color": "#FADE2A"
                },
                {
                  "value": 950,
                  "color": "#F2495C"
                }
              ]
            }
          },
          {
            "id": "active_users",
            "title": "Utilisateurs actifs",
            "type": "gauge",
            "position": {
              "row": 0,
              "col": 3,
              "width": 1,
              "height": 1
            },
            "data_source": "application_metrics",
            "metric": "ActiveUsers",
            "options": {
              "min": 0,
              "max": 1000,
              "unit": "users",
              "thresholds": [
                {
                  "value": 0,
                  "color": "#73BF69"
                },
                {
                  "value": 800,
                  "color": "#FADE2A"
                },
                {
                  "value": 950,
                  "color": "#F2495C"
                }
              ]
            }
          },
          {
            "id": "response_time_trend",
            "title": "Tendance temps de réponse",
            "type": "line",
            "position": {
              "row": 1,
              "col": 0,
              "width": 2,
              "height": 1
            },
            "data_source": "application_metrics",
            "metric": "ResponseTime",
            "options": {
              "time_range": "last_24h",
              "interval": "5m",
              "legend": true,
              "tooltip": true
            }
          },
          {
            "id": "error_rate_trend",
            "title": "Tendance taux d'erreur",
            "type": "line",
            "position": {
              "row": 1,
              "col": 2,
              "width": 2,
              "height": 1
            },
            "data_source": "application_metrics",
            "metric": "ErrorRate",
            "options": {
              "time_range": "last_24h",
              "interval": "5m",
              "legend": true,
              "tooltip": true
            }
          },
          {
            "id": "throughput_trend",
            "title": "Tendance débit",
            "type": "line",
            "position": {
              "row": 2,
              "col": 0,
              "width": 2,
              "height": 1
            },
            "data_source": "application_metrics",
            "metric": "Throughput",
            "options": {
              "time_range": "last_24h",
              "interval": "5m",
              "legend": true,
              "tooltip": true
            }
          },
          {
            "id": "active_users_trend",
            "title": "Tendance utilisateurs actifs",
            "type": "line",
            "position": {
              "row": 2,
              "col": 2,
              "width": 2,
              "height": 1
            },
            "data_source": "application_metrics",
            "metric": "ActiveUsers",
            "options": {
              "time_range": "last_24h",
              "interval": "5m",
              "legend": true,
              "tooltip": true
            }
          }
        ]
      }
    },
    {
      "id": "business_dashboard",
      "name": "Tableau de bord métier",
      "description": "Tableau de bord pour surveiller les métriques métier",
      "layout": {
        "rows": 3,
        "columns": 4,
        "panels": [
          {
            "id": "email_delivery_rate",
            "title": "Taux de livraison des emails",
            "type": "gauge",
            "position": {
              "row": 0,
              "col": 0,
              "width": 1,
              "height": 1
            },
            "data_source": "business_metrics",
            "metric": "EMAIL_DELIVERY_RATE",
            "options": {
              "min": 0,
              "max": 100,
              "unit": "%",
              "thresholds": [
                {
                  "value": 0,
                  "color": "#F2495C"
                },
                {
                  "value": 90,
                  "color": "#FADE2A"
                },
                {
                  "value": 95,
                  "color": "#73BF69"
                }
              ]
            }
          },
          {
            "id": "email_open_rate",
            "title": "Taux d'ouverture des emails",
            "type": "gauge",
            "position": {
              "row": 0,
              "col": 1,
              "width": 1,
              "height": 1
            },
            "data_source": "business_metrics",
            "metric": "EMAIL_OPEN_RATE",
            "options": {
              "min": 0,
              "max": 100,
              "unit": "%",
              "thresholds": [
                {
                  "value": 0,
                  "color": "#F2495C"
                },
                {
                  "value": 10,
                  "color": "#FADE2A"
                },
                {
                  "value": 15,
                  "color": "#73BF69"
                }
              ]
            }
          },
          {
            "id": "email_click_rate",
            "title": "Taux de clic des emails",
            "type": "gauge",
            "position": {
              "row": 0,
              "col": 2,
              "width": 1,
              "height": 1
            },
            "data_source": "business_metrics",
            "metric": "EMAIL_CLICK_RATE",
            "options": {
              "min": 0,
              "max": 100,
              "unit": "%",
              "thresholds": [
                {
                  "value": 0,
                  "color": "#F2495C"
                },
                {
                  "value": 2,
                  "color": "#FADE2A"
                },
                {
                  "value": 5,
                  "color": "#73BF69"
                }
              ]
            }
          },
          {
            "id": "conversion_rate",
            "title": "Taux de conversion",
            "type": "gauge",
            "position": {
              "row": 0,
              "col": 3,
              "width": 1,
              "height": 1
            },
            "data_source": "business_metrics",
            "metric": "CONVERSION_RATE",
            "options": {
              "min": 0,
              "max": 100,
              "unit": "%",
              "thresholds": [
                {
                  "value": 0,
                  "color": "#F2495C"
                },
                {
                  "value": 0.5,
                  "color": "#FADE2A"
                },
                {
                  "value": 1,
                  "color": "#73BF69"
                }
              ]
            }
          },
          {
            "id": "email_delivery_trend",
            "title": "Tendance taux de livraison",
            "type": "line",
            "position": {
              "row": 1,
              "col": 0,
              "width": 2,
              "height": 1
            },
            "data_source": "business_metrics",
            "metric": "EMAIL_DELIVERY_RATE",
            "options": {
              "time_range": "last_30d",
              "interval": "1d",
              "legend": true,
              "tooltip": true
            }
          },
          {
            "id": "email_engagement_trend",
            "title": "Tendance engagement",
            "type": "line",
            "position": {
              "row": 1,
              "col": 2,
              "width": 2,
              "height": 1
            },
            "data_source": "business_metrics",
            "metrics": ["EMAIL_OPEN_RATE", "EMAIL_CLICK_RATE"],
            "options": {
              "time_range": "last_30d",
              "interval": "1d",
              "legend": true,
              "tooltip": true
            }
          },
          {
            "id": "roi_trend",
            "title": "Tendance ROI",
            "type": "line",
            "position": {
              "row": 2,
              "col": 0,
              "width": 2,
              "height": 1
            },
            "data_source": "business_metrics",
            "metric": "ROI",
            "options": {
              "time_range": "last_30d",
              "interval": "1d",
              "legend": true,
              "tooltip": true
            }
          },
          {
            "id": "conversion_trend",
            "title": "Tendance conversion",
            "type": "line",
            "position": {
              "row": 2,
              "col": 2,
              "width": 2,
              "height": 1
            },
            "data_source": "business_metrics",
            "metric": "CONVERSION_RATE",
            "options": {
              "time_range": "last_30d",
              "interval": "1d",
