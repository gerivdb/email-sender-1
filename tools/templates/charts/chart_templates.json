{
  "templates": [
    {
      "id": "time_series_line",
      "name": "Graphique de série temporelle (ligne)",
      "description": "Graphique linéaire pour visualiser l'évolution d'une métrique dans le temps",
      "type": "line",
      "options": {
        "xAxis": {
          "type": "time",
          "title": "Temps"
        },
        "yAxis": {
          "title": "Valeur"
        },
        "legend": {
          "position": "bottom"
        },
        "tooltip": {
          "show": true,
          "format": "{value} à {time}"
        },
        "colors": ["#1f77b4", "#ff7f0e", "#2ca02c", "#d62728", "#9467bd"]
      }
    },
    {
      "id": "multi_series_line",
      "name": "Graphique multi-séries (ligne)",
      "description": "Graphique linéaire pour comparer plusieurs métriques dans le temps",
      "type": "line",
      "options": {
        "xAxis": {
          "type": "time",
          "title": "Temps"
        },
        "yAxis": {
          "title": "Valeur"
        },
        "legend": {
          "position": "right"
        },
        "tooltip": {
          "show": true,
          "format": "{series}: {value} à {time}"
        },
        "colors": ["#1f77b4", "#ff7f0e", "#2ca02c", "#d62728", "#9467bd"]
      }
    },
    {
      "id": "area_chart",
      "name": "Graphique de zone",
      "description": "Graphique de zone pour visualiser l'évolution et la magnitude d'une métrique",
      "type": "area",
      "options": {
        "xAxis": {
          "type": "time",
          "title": "Temps"
        },
        "yAxis": {
          "title": "Valeur"
        },
        "legend": {
          "position": "bottom"
        },
        "tooltip": {
          "show": true,
          "format": "{value} à {time}"
        },
        "colors": ["#1f77b4", "#ff7f0e", "#2ca02c", "#d62728", "#9467bd"],
        "opacity": 0.7
      }
    },
    {
      "id": "stacked_area",
      "name": "Graphique de zone empilée",
      "description": "Graphique de zone empilée pour visualiser la composition d'une métrique",
      "type": "area",
      "options": {
        "xAxis": {
          "type": "time",
          "title": "Temps"
        },
        "yAxis": {
          "title": "Valeur"
        },
        "legend": {
          "position": "right"
        },
        "tooltip": {
          "show": true,
          "format": "{series}: {value} à {time}"
        },
        "colors": ["#1f77b4", "#ff7f0e", "#2ca02c", "#d62728", "#9467bd"],
        "opacity": 0.7,
        "stacked": true
      }
    },
    {
      "id": "bar_chart",
      "name": "Graphique à barres",
      "description": "Graphique à barres pour comparer des valeurs discrètes",
      "type": "bar",
      "options": {
        "xAxis": {
          "type": "category",
          "title": "Catégorie"
        },
        "yAxis": {
          "title": "Valeur"
        },
        "legend": {
          "position": "bottom"
        },
        "tooltip": {
          "show": true,
          "format": "{category}: {value}"
        },
        "colors": ["#1f77b4", "#ff7f0e", "#2ca02c", "#d62728", "#9467bd"]
      }
    },
    {
      "id": "stacked_bar",
      "name": "Graphique à barres empilées",
      "description": "Graphique à barres empilées pour visualiser la composition de valeurs discrètes",
      "type": "bar",
      "options": {
        "xAxis": {
          "type": "category",
          "title": "Catégorie"
        },
        "yAxis": {
          "title": "Valeur"
        },
        "legend": {
          "position": "right"
        },
        "tooltip": {
          "show": true,
          "format": "{series}: {value}"
        },
        "colors": ["#1f77b4", "#ff7f0e", "#2ca02c", "#d62728", "#9467bd"],
        "stacked": true
      }
    },
    {
      "id": "pie_chart",
      "name": "Graphique circulaire",
      "description": "Graphique circulaire pour visualiser la répartition proportionnelle",
      "type": "pie",
      "options": {
        "legend": {
          "position": "right"
        },
        "tooltip": {
          "show": true,
          "format": "{name}: {value} ({percentage}%)"
        },
        "colors": ["#1f77b4", "#ff7f0e", "#2ca02c", "#d62728", "#9467bd"],
        "innerRadius": 0
      }
    },
    {
      "id": "donut_chart",
      "name": "Graphique en anneau",
      "description": "Graphique en anneau pour visualiser la répartition proportionnelle",
      "type": "pie",
      "options": {
        "legend": {
          "position": "right"
        },
        "tooltip": {
          "show": true,
          "format": "{name}: {value} ({percentage}%)"
        },
        "colors": ["#1f77b4", "#ff7f0e", "#2ca02c", "#d62728", "#9467bd"],
        "innerRadius": 0.5
      }
    },
    {
      "id": "scatter_plot",
      "name": "Nuage de points",
      "description": "Nuage de points pour visualiser la relation entre deux variables",
      "type": "scatter",
      "options": {
        "xAxis": {
          "title": "Variable X"
        },
        "yAxis": {
          "title": "Variable Y"
        },
        "legend": {
          "position": "bottom"
        },
        "tooltip": {
          "show": true,
          "format": "X: {x}, Y: {y}"
        },
        "colors": ["#1f77b4", "#ff7f0e", "#2ca02c", "#d62728", "#9467bd"]
      }
    },
    {
      "id": "heatmap",
      "name": "Carte de chaleur",
      "description": "Carte de chaleur pour visualiser des données matricielles",
      "type": "heatmap",
      "options": {
        "xAxis": {
          "type": "category",
          "title": "Axe X"
        },
        "yAxis": {
          "type": "category",
          "title": "Axe Y"
        },
        "tooltip": {
          "show": true,
          "format": "X: {x}, Y: {y}, Valeur: {value}"
        },
        "colorScale": {
          "min": 0,
          "max": 100,
          "colors": ["#ffffff", "#1f77b4", "#ff7f0e"]
        }
      }
    }
  ]
}
