{
  "name": "Augment Workflow Template",
  "nodes": [
    {
      "parameters": {
        "rule": {
          "interval": [
            {
              "field": "hours",
              "minutesInterval": 1,
              "hoursInterval": 1
            }
          ]
        }
      },
      "name": "Schedule Trigger",
      "type": "n8n-nodes-base.scheduleTrigger",
      "typeVersion": 1,
      "position": [250, 300]
    },
    {
      "parameters": {
        "url": "{{augmentApiUrl}}/generate",
        "method": "POST",
        "authentication": "headerAuth",
        "headerParameters": {
          "parameters": [
            {
              "name": "Authorization",
              "value": "Bearer {{augmentApiKey}}"
            }
          ]
        },
        "options": {},
        "bodyParameters": {
          "parameters": [
            {
              "name": "prompt",
              "value": "{{prompt}}"
            }
          ]
        }
      },
      "name": "Augment API",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 1,
      "position": [450, 300]
    },
    {
      "parameters": {
        "keepOnlySet": true,
        "values": {
          "string": [
            {
              "name": "result",
              "value": "={{ $json.body.result }}"
            }
          ]
        }
      },
      "name": "Process Result",
      "type": "n8n-nodes-base.set",
      "typeVersion": 1,
      "position": [650, 300]
    }
  ],
  "connections": {
    "Schedule_Trigger": [
      {
        "node": "Augment API",
        "type": "main",
        "index": 0
      }
    ],
    "Augment_API": [
      {
        "node": "Process Result",
        "type": "main",
        "index": 0
      }
    ]
  }
}
