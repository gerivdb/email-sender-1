# Qdrant Configuration Environment Variables
# Set these variables to control Qdrant behavior

# ===== MODE CONFIGURATION =====
# Options: embedded, internal, external, server, auto
# auto = automatically choose between embedded and external based on availability
QDRANT_MODE=auto

# ===== EXTERNAL MODE SETTINGS =====
# Only used when mode is 'external' or 'server'
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_TIMEOUT=30s
QDRANT_USE_SSL=false

# ===== EMBEDDED MODE SETTINGS =====
# Only used when mode is 'embedded' or 'internal'
QDRANT_DATA_PATH=./data/qdrant
QDRANT_MAX_COLLECTIONS=50
QDRANT_MAX_POINTS_PER_COLLECTION=100000
QDRANT_ENABLE_PERSIST=true
QDRANT_BACKUP_INTERVAL=5m

# ===== DEVELOPMENT SETTINGS =====
# For development and testing
QDRANT_CACHE_SIZE=10000
QDRANT_LOG_LEVEL=INFO
QDRANT_ENABLE_METRICS=true

# ===== EXAMPLES =====
# Force embedded mode:
# QDRANT_MODE=embedded

# Force external mode with custom server:
# QDRANT_MODE=external
# QDRANT_HOST=my-qdrant-server.com
# QDRANT_PORT=6333

# Auto mode (recommended for most cases):
# QDRANT_MODE=auto
