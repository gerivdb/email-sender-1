{
  "name": "error-pattern-analyzer",
  "displayName": "Error Pattern Analyzer",
  "description": "VS Code extension for analyzing error patterns in PowerShell scripts",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:powershell"
  ],
  "main": "./out/extension.js",
  "contributes": {    "commands": [
      {
        "command": "error-pattern-analyzer.analyzeCurrentFile",
        "title": "Analyze Error Patterns in Current File"
      },
      {
        "command": "error-pattern-analyzer.showErrorPatterns",
        "title": "Show Error Patterns"
      },
      {
        "command": "error-pattern-analyzer.granularizeSelection",
        "title": "ðŸŽ¯ Granulariser la sÃ©lection (Ultra-prÃ©cis)"
      }
    ],
    "configuration": {
      "title": "Error Pattern Analyzer",
      "properties": {
        "errorPatternAnalyzer.enableDiagnostics": {
          "type": "boolean",
          "default": true,
          "description": "Enable diagnostics for PowerShell files"
        },
        "errorPatternAnalyzer.databasePath": {
          "type": "string",
          "default": "",
          "description": "Path to the error pattern database"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "error-pattern-explorer",
          "title": "Error Pattern Explorer",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "error-pattern-explorer": [
        {
          "id": "errorPatterns",
          "name": "Error Patterns"
        },
        {
          "id": "errorCascades",
          "name": "Error Cascades"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test:unit": "mocha -r ts-node/register src/test/unit/**/*.test.ts"
  },  "devDependencies": {
    "@types/chai": "^5.2.1",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.3",
    "@types/node": "14.x",
    "@types/vscode": "^1.60.0",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "chai": "^5.2.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "sinon": "^19.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  }
}
