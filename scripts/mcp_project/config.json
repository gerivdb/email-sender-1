{
    "server": {
        "host": "localhost",
        "port": 8000,
        "debug": true,
        "log_level": "info",
        "cors_origins": ["*"]
    },
    "client": {
        "server_url": "http://localhost:8000",
        "timeout": 30,
        "retry_attempts": 3,
        "retry_delay": 1
    },
    "testing": {
        "enable_mocks": true,
        "test_server_url": "http://localhost:8000",
        "test_timeout": 5
    },
    "logging": {
        "level": "info",
        "format": "[%(asctime)s] [%(levelname)s] %(message)s",
        "date_format": "%Y-%m-%d %H:%M:%S",
        "file": "mcp_project.log",
        "max_size": 10485760,
        "backup_count": 5
    },
    "tools": {
        "add": {
            "description": "Additionne deux nombres",
            "parameters": {
                "a": "int",
                "b": "int"
            },
            "returns": "int"
        },
        "multiply": {
            "description": "Multiplie deux nombres",
            "parameters": {
                "a": "int",
                "b": "int"
            },
            "returns": "int"
        },
        "get_system_info": {
            "description": "Retourne des informations sur le syst√®me",
            "parameters": {},
            "returns": "dict"
        }
    },
    "error_handling": {
        "log_errors": true,
        "show_traceback": false,
        "retry_on_connection_error": true,
        "max_retries": 3,
        "retry_delay": 1
    }
}
