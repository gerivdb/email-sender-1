# Set default behavior to automatically normalize line endings
* text=auto

# Force batch scripts to use CRLF
*.{cmd,[cC][mM][dD]} text eol=crlf
*.{bat,[bB][aA][tT]} text eol=crlf

# Force bash scripts to use LF
*.sh text eol=lf

# PowerShell scripts
*.ps1 text eol=crlf
*.psm1 text eol=crlf
*.psd1 text eol=crlf

# Web files
*.html text eol=crlf
*.htm text eol=crlf
*.css text eol=crlf
*.js text eol=crlf
*.json text eol=crlf
*.xml text eol=crlf

# Source code
*.py text eol=lf
*.java text eol=lf
*.c text eol=lf
*.cpp text eol=lf
*.h text eol=lf

# Documentation
*.md text eol=crlf
*.txt text eol=crlf

# Config files
*.yml text eol=lf
*.yaml text eol=lf
*.conf text eol=lf
*.config text eol=crlf
*.ini text eol=crlf

# Binary files (should not be modified)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.zip binary
*.7z binary
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary
*.pdf binary
*.exe binary
*.dll binary
*.bin binary
