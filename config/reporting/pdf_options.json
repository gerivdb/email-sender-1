{
  "global": {
    "margin_top": "20mm",
    "margin_bottom": "20mm",
    "margin_left": "20mm",
    "margin_right": "20mm",
    "page_size": "A4",
    "orientation": "Portrait",
    "dpi": 300,
    "image_quality": 100,
    "enable_javascript": true,
    "javascript_delay": 1000,
    "enable_smart_shrinking": true,
    "enable_external_links": true,
    "enable_internal_links": true,
    "print_media_type": true,
    "background": true,
    "no_images": false,
    "grayscale": false
  },
  "toc": {
    "enable": true,
    "header_text": "Table des matières",
    "level_indentation": 10,
    "disable_dotted_lines": false,
    "disable_links": false,
    "disable_back_links": false,
    "xsl_style_sheet": ""
  },
  "outline": {
    "enable": true,
    "depth": 3
  },
  "header": {
    "enable": true,
    "html": "<div style='text-align: right; font-size: 10px; color: #777;'>Page [page] sur [topage]</div>",
    "spacing": "5mm",
    "line": false
  },
  "footer": {
    "enable": true,
    "html": "<div style='text-align: center; font-size: 10px; color: #777;'>Rapport généré le [date] à [time]</div>",
    "spacing": "5mm",
    "line": false
  },
  "cover": {
    "enable": true,
    "html": "<div style='text-align: center; padding-top: 100px;'><h1 style='font-size: 28px;'>{{report_title}}</h1><p style='font-size: 16px; margin-top: 20px;'>{{report_description}}</p><p style='font-size: 14px; margin-top: 50px;'>Période: {{report_period_start}} - {{report_period_end}}</p><p style='font-size: 14px;'>Généré le: {{report_generated_at}}</p></div>"
  },
  "watermark": {
    "enable": false,
    "text": "CONFIDENTIEL",
    "font_size": 72,
    "font_color": "#DDDDDD",
    "opacity": 0.3,
    "angle": 45
  }
}
