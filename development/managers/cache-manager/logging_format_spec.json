{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Format de log centralisé - CacheManager v74",
  "type": "object",
  "properties": {
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Horodatage ISO8601 de l’événement loggé"
    },
    "level": {
      "type": "string",
      "enum": ["DEBUG", "INFO", "WARN", "ERROR", "FATAL"],
      "description": "Niveau de sévérité du log"
    },
    "source": {
      "type": "string",
      "description": "Nom du module, script ou manager à l’origine du log"
    },
    "message": {
      "type": "string",
      "description": "Message principal du log"
    },
    "context": {
      "type": "object",
      "description": "Données contextuelles additionnelles (clé/valeur)",
      "additionalProperties": true
    },
    "trace_id": {
      "type": "string",
      "description": "Identifiant de traçabilité (corrélation inter-logs)"
    },
    "user": {
      "type": "string",
      "description": "Utilisateur ou agent à l’origine de l’action (optionnel)"
    }
  },
  "required": ["timestamp", "level", "source", "message"],
  "additionalProperties": false
}
