{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Report Template Schema",
  "description": "Schema for defining report templates",
  "type": "object",
  "required": ["templates"],
  "properties": {
    "templates": {
      "type": "array",
      "description": "Array of report templates",
      "items": {
        "type": "object",
        "required": ["id", "name", "description", "type", "format", "sections"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the report template"
          },
          "name": {
            "type": "string",
            "description": "Display name of the report"
          },
          "description": {
            "type": "string",
            "description": "Detailed description of the report"
          },
          "type": {
            "type": "string",
            "description": "Type of report",
            "enum": ["system", "application", "business"]
          },
          "format": {
            "type": "string",
            "description": "Default output format",
            "enum": ["html", "pdf", "excel"]
          },
          "sections": {
            "type": "array",
            "description": "Sections of the report",
            "items": {
              "type": "object",
              "required": ["id", "title", "type"],
              "properties": {
                "id": {
                  "type": "string",
                  "description": "Unique identifier for the section"
                },
                "title": {
                  "type": "string",
                  "description": "Display title of the section"
                },
                "type": {
                  "type": "string",
                  "description": "Type of section",
                  "enum": ["text", "metrics_summary", "chart", "table", "anomalies", "recommendations"]
                },
                "content": {
                  "type": "string",
                  "description": "Text content for text sections"
                },
                "metrics": {
                  "type": "array",
                  "description": "Metrics to include in the section",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string",
                        "description": "Unique identifier for the metric"
                      },
                      "name": {
                        "type": "string",
                        "description": "Display name of the metric"
                      },
                      "metric": {
                        "type": "string",
                        "description": "Name of the metric in the data source"
                      },
                      "function": {
                        "type": "string",
                        "description": "Function to apply to the metric",
                        "enum": ["avg", "max", "min", "sum", "count", "percentile", "median", "stddev"]
                      },
                      "percentile": {
                        "type": "number",
                        "description": "Percentile value (if function is 'percentile')",
                        "minimum": 0,
                        "maximum": 100
                      },
                      "format": {
                        "type": "string",
                        "description": "Format string for the metric value"
                      }
                    },
                    "required": ["id", "name", "metric", "function"]
                  }
                },
                "chart_type": {
                  "type": "string",
                  "description": "Type of chart for chart sections",
                  "enum": ["line", "bar", "pie", "area", "scatter", "heatmap"]
                },
                "metric": {
                  "type": "string",
                  "description": "Primary metric for single-metric charts"
                },
                "options": {
                  "type": "object",
                  "description": "Options for chart sections",
                  "properties": {
                    "title": {
                      "type": "string",
                      "description": "Chart title"
                    },
                    "x_axis_label": {
                      "type": "string",
                      "description": "Label for the X axis"
                    },
                    "y_axis_label": {
                      "type": "string",
                      "description": "Label for the Y axis"
                    },
                    "include_avg_line": {
                      "type": "boolean",
                      "description": "Whether to include an average line"
                    },
                    "include_threshold_lines": {
                      "type": "boolean",
                      "description": "Whether to include threshold lines"
                    },
                    "thresholds": {
                      "type": "array",
                      "description": "Threshold lines to include",
                      "items": {
                        "type": "object",
                        "properties": {
                          "value": {
                            "type": "number",
                            "description": "Threshold value"
                          },
                          "color": {
                            "type": "string",
                            "description": "Color for the threshold line"
                          },
                          "label": {
                            "type": "string",
                            "description": "Label for the threshold line"
                          }
                        },
                        "required": ["value", "color"]
                      }
                    }
                  }
                },
                "threshold": {
                  "type": "number",
                  "description": "Threshold for anomaly detection"
                },
                "max_anomalies": {
                  "type": "integer",
                  "description": "Maximum number of anomalies to include"
                },
                "based_on": {
                  "type": "array",
                  "description": "Metrics to base recommendations on",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
