{
  "sandbox": false,
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell",
      "args": ["-ExecutionPolicy", "Bypass"]
    }
  },
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "task.autoDetect": "on",
  "tasks.runOn": {
    "folderOpen": ["avg-exclusion.auto-start"]
  },
  "chat.promptFiles": true,
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  "github.copilot.chat.welcomeMessage": "always",
  "files.associations": {
    "*.instructions.md": "markdown",
    "*.prompt.md": "markdown"
  },
  "markdown.preview.fontFamily": "Consolas, 'Courier New', monospace",
  "markdown.preview.theme": "dark",
  "markdown.preview.markEditorSelection": true,
  "copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "scminput": true
  },
  "editor.accessibilitySupport": "on",
  "editor.snippetSuggestions": "top",
  "security.workspace.trust.enabled": true,
  "project.toolVersions": {
    "go": ">=1.24.4",
    "golangci-lint": ">=1.59",
    "markdownlint": ">=0.32"
  },
  "go.useLanguageServer": true,
  "go.buildOnSave": "workspace",
  "go.lintOnSave": "package",
  "go.vetOnSave": "package",
  "go.formatTool": "goimports",
  "go.lintTool": "golangci-lint",
  "go.lintFlags": [
    "--fast"
  ],
  "go.coverOnSave": false,
  "go.testOnSave": false,
  "go.toolsManagement.autoUpdate": true,
  "gopls": {
    "build.buildFlags": ["-tags=database"],
    "analyses": {
      "unusedparams": true,
      "shadow": true
    },
    "staticcheck": true,
    "env": {},
    "directoryFilters": [
      "-node_modules",
      "-vendor"
    ],
    "completionBudget": "10s"
  },
  "[go]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "always"
    },
    "editor.defaultFormatter": "golang.go"
  },
  "editor.hover.delay": 1000,
  "editor.codeActions.triggerOnFocusChange": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "always"
  },
  "editor.tabSize": 3,
  "editor.fontSize": 12,
  "editor.formatOnSave": true,
  "editor.inlayHints.enabled": "off",
  "editor.minimap.renderCharacters": false,
  "renderWhitespace": "boundary",
  "rulers": [80, 120],
  "wordWrap": "on",
  "suggestSelection": "first",
  "files.autoSave": "onWindowChange",
  "files.autoSaveDelay": 1000,
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/dist": true,
    "**/logs": true,
    "**/cache": true,
    "**/temp": true,
    "**/tmp": true,
    "**/bower_components": true,
    "**/*.code-search": true
  },
  "files.watcherExclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/dist": true,
    "**/logs": true,
    "**/cache": true,
    "**/temp": true,
    "**/tmp": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/.hg/store/**": true
  },
  "search.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/dist": true,
    "**/logs": true,
    "**/cache": true,
    "**/temp": true,
    "**/tmp": true,
    "**/bower_components": true,
    "**/*.code-search": true
  },
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.markdownlint": "always"
    }
  },
  "kilocode.rules.enable": true,
  "kilocode.rules.severity": "error",
  "kilocode.rules.customRules": [
    {
      "id": "KC003",
      "message": "Les fonctions doivent avoir une documentation JSDoc.",
      "severity": "error",
      "pattern": "/\\*\\*[\\s\\S]*?\\*/",
      "match": "file"
    }
  ],
  "roocode.modes": [
    {
      "id": "KC003",
      "name": "Documentation JSDoc obligatoire",
      "message": "Les fonctions doivent avoir une documentation JSDoc.",
      "severity": "error",
      "pattern": "/\\*\\*[\\s\\S]*?\\*/",
      "match": "file"
    }
  ],
  "notifications.toasts.location": "bottom",
  "notifications.hideStatusBar": true,
  "notifications.toasts.duration": 1500,
  "problems.decorations.enabled": false,
  "powershell.codeFormatting.useCorrectCasing": true,
  "powershell.codeFormatting.autoCorrectAliases": true,
  "powershell.codeFormatting.trimWhitespaceAroundPipe": true,
  "powershell.integratedConsole.focusConsoleOnExecute": false,
  "powershell.pester.useLegacyCodeLens": false,
  "powershell.promptToUpdatePowerShell": false,
  "powershell.startAutomatically": true,
  "python.formatting.provider": "black",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.testing.pytestEnabled": true,
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.autoImportCompletions": true,
  "makefile.configureOnOpen": true,
  "docker.extension.enableComposeLanguageServer": false,
  "mssql.connectionGroups": [
    {
      "name": "ROOT",
      "id": "5C904829-CF87-4C77-836B-208459C5E987"
    }
  ],
  "mssql.connections": [],
  "mcp": {
    "servers": {
      "mcp-server-time": {
        "command": "python",
        "args": [
          "-m",
          "mcp_server_time",
          "--local-timezone=America/Los_Angeles"
        ],
        "env": {}
      },
      "codacy": {
        "command": "npx",
        "args": [
          "-y",
          "@codacy/codacy-mcp@latest"
        ]
      }
    }
  },
  "roo-cline.allowedCommands": [
    "npm test",
    "npm install",
    "tsc",
    "git log",
    "git diff",
    "git show",
    "gemini",
    "git",
    "go",
    "go run",
    "powershell -Command",
    "ps",
    "python ",
    "set",
    "echo",
    "git ls-remote",
    "Rename-Item",
    "cmd",
    "go get",
    "java",
    "powershell",
    "npm",
    "test",
    "cd",
    "pwsh",
    "copy",
    "mkdir",
    "move",
    "taskkill",
    "ls",
    "code",
    "which",
    "where",
    "tasklist"
  ],
  "settingsSync.ignoredExtensions": [
    "rooveterinaryinc.roo-cline"
  ],
  "kilo-code.allowedCommands": [
    "npm test",
    "npm install",
    "tsc",
    "git log",
    "git diff",
    "git show"
  ],
