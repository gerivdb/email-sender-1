{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "üöÄ Launch CLI",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/cli",
      "args": [],
      "env": {},
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "üöÄ Launch Server",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/server",
      "args": ["--port", "8080", "--log-level", "debug"],
      "env": {},
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "‚öôÔ∏è Launch Code Generator",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/codegen",
      "args": ["-type", "service"],
      "env": {},
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "üß™ Launch Test Generator",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/testgen",
      "args": ["-target", "internal/metrics"],
      "env": {},
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "üìÑ Launch Current File",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${fileDirname}",
      "env": {},
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "üêû Debug Current File",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${file}",
      "env": {},
      "cwd": "${workspaceFolder}",
      "showLog": true,
      "logOutput": "debugger",
      "trace": "verbose",
      "dlvFlags": ["--check-go-version=false"]
      // "preLaunchTask": "build"
    },
    {
      "name": "üß™ Debug Test Function",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${fileDirname}",
      "env": {},
      "cwd": "${workspaceFolder}",
      "args": ["-test.v", "-test.run", "^${input:testName}$"],
      "showLog": true,
      "dlvFlags": ["--check-go-version=false"]
    },
    {
      "name": "üß™ Debug Test Package",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${input:testPackagePath}",
      "env": {},
      "cwd": "${workspaceFolder}",
      "args": ["-test.v"],
      "showLog": true
    },
    {
      "name": "üìù G√©n√©rer doc managers (dry-run)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/tools/cmd/generate_manager_io_doc",
      "args": [
        "--dry-run",
        "--agents-path", "${workspaceFolder}/AGENTS.md"
      ],
      "cwd": "${workspaceFolder}"
    }
  ],
  "inputs": [
    {
      "id": "testName",
      "description": "Enter test function name (regex supported)",
      "default": "TestInvalidationManager",
      "type": "promptString"
    },
    {
      "id": "testPackagePath",
      "description": "Enter test package directory (relative to workspace)",
      "default": "${workspaceFolder}/internal",
      "type": "promptString"
    }
  ]
}
