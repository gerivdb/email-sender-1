{
   // Use IntelliSense to learn about possible attributes.
   // Hover to view descriptions of existing attributes.
   // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
   "version": "0.2.0",
   "configurations": [
      {
         "name": "Launch CLI",
         "type": "go",
         "request": "launch",
         "mode": "auto",
         "program": "${workspaceFolder}/cmd/cli",
         "args": [],
         "env": {},
         "cwd": "${workspaceFolder}"
      },
      {
         "name": "Launch Server",
         "type": "go",
         "request": "launch",
         "mode": "auto",
         "program": "${workspaceFolder}/cmd/server",
         "args": ["--port", "8080", "--log-level", "debug"],
         "env": {},
         "cwd": "${workspaceFolder}"
      },
      {
         "name": "Launch Code Generator",
         "type": "go",
         "request": "launch",
         "mode": "auto",
         "program": "${workspaceFolder}/cmd/codegen",
         "args": ["-type", "service"],
         "env": {},
         "cwd": "${workspaceFolder}"
      },
      {
         "name": "Launch Test Generator",
         "type": "go",
         "request": "launch",
         "mode": "auto", 
         "program": "${workspaceFolder}/cmd/testgen",
         "args": ["-target", "internal/metrics"],
         "env": {},
         "cwd": "${workspaceFolder}"
      },
      {
         "name": "Launch Current File",
         "type": "go",
         "request": "launch",
         "mode": "auto",
         "program": "${fileDirname}",
         "env": {},
         "cwd": "${workspaceFolder}"
      },
      {
         "name": "Debug Current File", 
         "type": "go",
         "request": "launch",
         "mode": "debug",
         "program": "${file}",
         "env": {},
         "cwd": "${workspaceFolder}",
         // Options Delve optionnelles
         "dlvFlags": ["--check-go-version=false"],
         "showLog": true,
         "logOutput": "debugger",
         "trace": "verbose"
      },
      {
         "name": "Debug Test File",
         "type": "go", 
         "request": "launch",
         "mode": "test",
         "program": "${fileDirname}",
         "env": {},
         "cwd": "${workspaceFolder}",
         "args": ["-test.v", "-test.run", "^${input:testName}$"],
         "showLog": true,
         "dlvFlags": ["--check-go-version=false"]
      }
   ],
   "inputs": [
      {
         "id": "testName",
         "description": "Enter test function name",
         "default": "TestInvalidationManager",
         "type": "promptString"
      }
   ]
}