{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Maintenance: Organiser les scripts",
      "type": "shell",
      "command": "powershell.exe -ExecutionPolicy Bypass -File \"${workspaceFolder}/development/scripts/maintenance/repo/organize-scripts.ps1\"",
      "problemMatcher": [],
      "group": "none",
      "presentation": {
        "reveal": "silent",
        "panel": "shared",
        "showReuseMessage": false
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "Journal: Nouvelle entrée",
      "type": "shell",
      "command": "python ${workspaceFolder}/development/scripts/python/journal/journal_vscode.py new",
      "problemMatcher": [],
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true
      }
    },
    {
      "label": "Journal: Rechercher",
      "type": "shell",
      "command": "python ${workspaceFolder}/development/scripts/python/journal/journal_vscode.py search",
      "problemMatcher": [],
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true
      }
    },
    {
      "label": "Journal: Reconstruire l'index",
      "type": "shell",
      "command": "python ${workspaceFolder}/development/scripts/python/journal/journal_search_simple.py --rebuild",
      "problemMatcher": [],
      "group": "none"
    },
    {
      "label": "Journal: Entrée quotidienne",
      "type": "shell",
      "command": "powershell -File ${workspaceFolder}/development/scripts/cmd/journal-daily.ps1",
      "problemMatcher": [],
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true
      }
    },
    {
      "label": "Journal: Entrée hebdomadaire",
      "type": "shell",
      "command": "powershell -File ${workspaceFolder}/development/scripts/cmd/journal-daily.ps1 -Weekly",
      "problemMatcher": [],
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true
      }
    },
    {
      "label": "Journal: Démarrer la surveillance",
      "type": "shell",
      "command": "python ${workspaceFolder}/development/scripts/python/journal/journal_watcher.py",
      "problemMatcher": [],
      "group": "none",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": false
      }
    },
    {
      "label": "Journal: Interroger le RAG",
      "type": "shell",
      "command": "python ${workspaceFolder}/development/scripts/python/journal/journal_rag_simple.py --query \"${input:ragQuery}\"",
      "problemMatcher": [],
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true
      }
    }
  ],
  "inputs": [
    {
      "id": "ragQuery",
      "description": "Requête pour le système RAG",
      "default": "problèmes d'encodage",
      "type": "promptString"
    }
  ]
}
